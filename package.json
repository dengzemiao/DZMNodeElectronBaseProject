{
  "name": "dzm-electron-base",
  "version": "1.0.0",
  "description": "自用 Node Electron 基础空框架",
  "main": "src/main/main.js",
  "scripts": {
    "serve": "electron .",
    "serve:dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "electron",
    "desktop-app"
  ],
  "author": "",
  "license": "MIT",
  "build": {
    "appId": "com.dzm.electron.base",
    "productName": "DZM Electron App",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
  }
}
